<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Course Code TextView -->
    <TextView
        android:id="@+id/courseCodeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Course Code: "
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Course Name TextView -->
    <TextView
        android:id="@+id/courseNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Course Name: "
        android:textSize="16sp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/courseCodeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Lecturer Name TextView -->
    <TextView
        android:id="@+id/lecturerNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lecturer Name: "
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/courseNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView for Students -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/studentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:importantForAccessibility="yes"
        android:contentDescription="List of students enrolled in the course"
        app:layout_constraintTop_toBottomOf="@id/lecturerNameTextView"
        app:layout_constraintBottom_toTopOf="@id/addStudentFab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FloatingActionButton to add a new student -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addStudentFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Add Student"
        app:srcCompat="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
